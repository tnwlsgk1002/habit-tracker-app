<resources>
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_03</item>
        <item name="colorPrimaryVariant">@color/pink_02</item>
        <item name="colorOnPrimary">@color/pink_04</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_02</item>
        <item name="colorSecondaryVariant">@color/pink_03</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.HabitTracker.BottomSheetDialog</item>
    </style>

    <style name="Theme.HabitTracker.Main" parent="Theme.HabitTracker">
        <item name="android:windowBackground">@color/pink_01</item>
    </style>

    <style name="Theme.HabitTracker.Edit" parent="Theme.HabitTracker">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.HabitTracker.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>