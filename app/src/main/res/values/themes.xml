<resources>
    <!-- Base application theme. -->
    <style name="Theme.HabitTracker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.HabitTracker.BottomSheetDialog</item>
        <item name="toolbarStyle">@style/Theme.HabitTracker.Toolbar</item>
    </style>

    <style name="Theme.HabitTracker.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="Theme.HabitTracker.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/HabitTracker.TextAppearance.TitleLarge</item>
    </style>

    <style name="Theme.HabitTracker.NumberPicker" parent="">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:editTextStyle">@style/HabitTracker.TextAppearance.BodyLarge</item>
    </style>
</resources>