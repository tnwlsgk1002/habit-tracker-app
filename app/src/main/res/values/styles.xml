<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TextAppearance -->
    <style name="HabitTracker.TextAppearance.TitleLarge" parent="TextAppearance.Material3.TitleLarge" />

    <style name="HabitTracker.TextAppearance.TitleMedium" parent="TextAppearance.Material3.TitleMedium" />

    <style name="HabitTracker.TextAppearance.TitleSmall" parent="TextAppearance.Material3.TitleSmall" />

    <style name="HabitTracker.TextAppearance.BodyLarge" parent="TextAppearance.Material3.BodyLarge" />

    <style name="HabitTracker.TextAppearance.BodyMedium" parent="TextAppearance.Material3.BodyMedium" />

    <style name="HabitTracker.TextAppearance.BodySmall" parent="TextAppearance.Material3.BodySmall" />

    <style name="HabitTracker.TextAppearance.LabelLarge" parent="TextAppearance.Material3.LabelLarge" />

    <style name="HabitTracker.TextAppearance.LabelMedium" parent="TextAppearance.Material3.LabelMedium" />

    <style name="HabitTracker.TextAppearance.LabelSmall" parent="TextAppearance.Material3.LabelMedium" />

    <!-- DateView -->
    <style name="DateViewStyle">
        <item name="android:visibility">visible</item>
        <item name="checkedBackgroundColor">?attr/colorPrimary</item>
        <item name="notCheckedTextColor">?attr/colorOnBackground</item>
        <item name="checkedTextColor">?attr/colorOnPrimary</item>
        <item name="checked">true</item>
        <item name="dayOfTheWeek">sun</item>
        <item name="dayOfTheMonth">1</item>
        <item name="isToday">true</item>
    </style>

    <style name="ShimmerView">
        <item name="android:background">?attr/colorSurfaceContainerHighest</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainerHighest</item>
    </style>

    <style name="ShimmerView.Text">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ShimmerView.Circle">
        <item name="android:layout_marginTop">3.5dp</item>
        <item name="android:background">@drawable/bg_filled_circle</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <!-- CardView -->
    <style name="LogCardView" parent="Widget.Material3.CardView.Elevated">
<!--        <item name="cardBackgroundColor">@color/white</item>-->
    </style>

    <style name="SelectTypeCardView" parent="Widget.Material3.CardView.Elevated">
<!--        <item name="cardBackgroundColor">@android:color/transparent</item>-->
    </style>

    <style name="CardViewIconStyle">
<!--        <item name="tint">?attr/color</item>-->
    </style>

    <style name="InputDataCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- HabitItemView -->
    <style name="HabitItemViewMore" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
<!--        <item name="iconTint">@color/black</item>-->
        <item name="iconGravity">textStart</item>
        <item name="icon">@drawable/ic_baseline_more_vert</item>
    </style>

    <style name="HabitItemViewBell">
        <item name="android:backgroundTint">?attr/colorOnSurface</item>
    </style>

    <style name="HabitItemViewAddedLogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ic_thin_plus</item>
        <item name="iconSize">12dp</item>
<!--        <item name="iconTint">@color/blue_03</item>-->
<!--        <item name="strokeColor">@color/blue_03</item>-->
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.LabelLarge</item>
<!--        <item name="android:textColor">@color/blue_03</item>-->
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
        <item name="android:contentDescription">@string/add_habit</item>
<!--        <item name="android:backgroundTint">@color/blue_03</item>-->
        <item name="srcCompat">@drawable/ic_thick_plus</item>
<!--        <item name="tint">@color/white</item>-->
        <item name="fabSize">normal</item>
    </style>

    <!-- 습관 설정 화면(습관 추가, 수정) -->
    <style name="BottomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.LabelLarge</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="RightArrowViewStyle">
        <item name="android:background">@drawable/ic_thick_right_arrow</item>
        <item name="android:backgroundTint">?attr/colorOnBackground</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="background">@drawable/bg_filled_rounded_rect_20</item>
    </style>

    <style name="BottomSheetTitleStyle">
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.TitleLarge</item>
        <item name="android:layout_margin">32dp</item>
    </style>

    <style name="WhenChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.LabelMedium</item>
    </style>

    <style name="TimeInputEditEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:text">00</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.LabelLarge
        </item>
    </style>
</resources>