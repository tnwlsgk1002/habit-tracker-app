<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DateViewStyle">
        <item name="android:visibility">visible</item>
        <item name="checkedBackgroundColor">@color/pink_04</item>
        <item name="notCheckedTextColor">@color/white</item>
        <item name="checkedTextColor">@color/white</item>
        <item name="checked">true</item>
        <item name="dayOfTheWeek">sun</item>
        <item name="dayOfTheMonth">1</item>
        <item name="isToday">true</item>
    </style>

    <style name="ShimmerViewText">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/gray_04</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ShimmerViewCircle">
        <item name="android:layout_marginTop">3.5dp</item>
        <item name="android:background">@drawable/bg_filled_circle</item>
        <item name="android:backgroundTint">@color/gray_04</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <!-- CardView -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardBackgroundColor">@color/gray_09</item>
        <item name="android:background">@color/gray_09</item>
    </style>

    <style name="CardViewIconStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/white</item>
    </style>

    <!-- Habit Item View -->

    <style name="HabitItemViewText.Title" parent="HabitTracker.TextAppearance.Text14.Bold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HabitItemViewText.Caption" parent="HabitTracker.TextAppearance.Text12.Medium">
        <item name="android:textColor">@color/gray_05</item>
    </style>

    <style name="HabitItemViewMore" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="HabitItemViewBell">
        <item name="android:backgroundTint">@color/gray_05</item>
    </style>

    <style name="HabitItemViewAddedLogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ic_thin_plus</item>
        <item name="iconSize">12dp</item>
        <item name="iconTint">@color/pink_04</item>
        <item name="strokeColor">@color/pink_04</item>
        <item name="rippleColor">@color/pink_04</item>
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.Text12.Medium</item>
        <item name="android:textColor">@color/pink_04</item>
    </style>

    <style name="DividerLineView">
        <item name="android:background">@color/pink_04</item>
    </style>

    <style name="DividerCircleView">
        <item name="android:background">@drawable/bg_filled_circle</item>
        <item name="android:backgroundTint">@color/pink_04</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
        <item name="android:contentDescription">@string/add_habit</item>
        <item name="android:backgroundTint">@color/pink_04</item>
        <item name="srcCompat">@drawable/ic_thick_plus</item>
        <item name="tint">@color/white</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="BottomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/bg_filled_rounded_rect_12</item>
        <item name="android:backgroundTint">@color/pink_04</item>
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.Text16.SemiBold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_filled_rounded_rect_20</item>
        <item name="android:backgroundTint">@color/gray_08</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>