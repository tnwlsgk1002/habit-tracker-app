<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="DateViewTextApparance.DayOfTheWeek" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DateViewTextApparance.DayOfTheMonth" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DateViewStyle">
        <item name="android:visibility">visible</item>
        <item name="checkedBackgroundColor">@color/pink_04</item>
        <item name="notCheckedTextColor">@color/white</item>
        <item name="checkedTextColor">@color/white</item>
        <item name="checked">true</item>
        <item name="dayOfTheWeek">sun</item>
        <item name="dayOfTheMonth">1</item>
        <item name="isToday">true</item>
    </style>

    <style name="ShimmerViewText">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/gray_04</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ShimmerViewCircle">
        <item name="android:layout_marginTop">3.5dp</item>
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:backgroundTint">@color/gray_04</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

</resources>