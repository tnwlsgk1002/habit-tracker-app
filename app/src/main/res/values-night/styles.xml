<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DateViewStyle">
        <item name="android:visibility">visible</item>
        <item name="checkedBackgroundColor">@color/blue_02</item>
        <item name="notCheckedTextColor">@color/white</item>
        <item name="checkedTextColor">@color/white</item>
        <item name="checked">true</item>
        <item name="dayOfTheWeek">sun</item>
        <item name="dayOfTheMonth">1</item>
        <item name="isToday">true</item>
    </style>

    <style name="ShimmerView.Text">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@color/gray_04</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <style name="ShimmerView.Circle">
        <item name="android:layout_marginTop">3.5dp</item>
        <item name="android:background">@drawable/bg_filled_circle</item>
        <item name="android:backgroundTint">@color/gray_04</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
    </style>

    <!-- CardView -->
    <style name="LogCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/blue_04</item>
    </style>

    <style name="InputDataCardView" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/blue_05</item>
    </style>

    <style name="CardViewIconStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="SelectTypeCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/blue_05</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@color/white</item>
    </style>

    <!-- Habit Item View -->

    <style name="HabitItemViewMore" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="HabitItemViewBell">
        <item name="android:backgroundTint">@color/gray_05</item>
    </style>

    <style name="HabitItemViewAddedLogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="icon">@drawable/ic_thin_plus</item>
        <item name="iconSize">12dp</item>
        <item name="iconTint">@color/blue_03</item>
        <item name="strokeColor">@color/blue_03</item>
        <item name="android:textAppearance">@style/HabitTracker.TextAppearance.LabelLarge</item>
        <item name="android:textColor">@color/blue_03</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_margin">16dp</item>
        <item name="android:contentDescription">@string/add_habit</item>
        <item name="android:backgroundTint">@color/blue_03</item>
        <item name="srcCompat">@drawable/ic_thick_plus</item>
        <item name="tint">@color/white</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_filled_rounded_rect_20</item>
        <item name="android:backgroundTint">@color/blue_04</item>
    </style>

</resources>